var uploader = $('#<%= @uploader_id %>');

if (uploader.hasClass("gallery-uploader")) {
  $('#<%= @uploader_id %>').find('.uploader-assets-wrapper').append('<%= j render partial: "assetable/assets/asset", locals: { asset: @external_service, fieldname: @fieldname } %>');
} else {
  $('#<%= @uploader_id %>').find('.uploader-assets-wrapper').html('<%= j render partial: "assetable/assets/asset", locals: { asset: @external_service, fieldname: @fieldname } %>');
};

$('.assetable-external-services').modal('hide').remove();